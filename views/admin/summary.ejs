<% include('../partials/header') %>
<h1>หน้าสรุปผลกิจกรรม</h1>
<table class="table">
    <thead>
        <tr>
            <th>ชื่อ</th>
            <th>เปอร์เซ็นต์การเข้าร่วม</th>
            <th>สถานะกิจกรรม</th>
        </tr>
    </thead>
    <tbody>
        <% summary.forEach(user => { %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.attendancePercentage %>%</td>
                <td>
                    <ul>
                        <% user.activities.forEach(activity => { %>
                            <li>
                                <%= activity.status %>
                                <% if (activity.reason) { %> - <%= activity.reason %> <% } %>
                            </li>
                        <% }) %>
                    </ul>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
<% include('../partials/footer') %>